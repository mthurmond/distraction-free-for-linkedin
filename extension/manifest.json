{
    "name": "Distraction free Linkedin",
    "version": "1.0",
    "description": "Removes distractions from Linkedin like the newsfeed, alerts, and suggested people.",
    "manifest_version": 3,

    "action": {
        "default_popup": "popup/popup.html"
      },

    "permissions": [
        "storage"
    ],

    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },

    "content_scripts": [{
        "matches": ["https://linkedin.com/*"],
        "css": ["hider/hider-button.css"],
        "js": ["hider/hider.js"]
    }]

}